<%# Local: entry (DailyScheduleQuery::ScheduleEntry) %>
<div id="schedule_entry_<%= entry.schedule.id %>"
     class="px-4 py-3 flex items-start justify-between gap-4 <%= 'bg-red-50' if entry.overdue %>">
  <div class="flex-1 min-w-0">
    <%# Drug name and form %>
    <div class="flex items-center gap-2">
      <p class="text-sm font-semibold text-gray-900"><%= entry.drug_name %></p>
      <span class="inline-block px-2 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-600">
        <%= entry.form %>
      </span>
    </div>

    <%# Dosage %>
    <p class="mt-0.5 text-sm text-gray-700">
      <%= entry.dosage %>
    </p>

    <%# Instructions %>
    <% if entry.instructions.present? %>
      <p class="mt-1 text-xs text-gray-500 italic">
        <%= entry.instructions %>
      </p>
    <% end %>

    <%# Overdue indicator %>
    <% if entry.overdue %>
      <p class="mt-1 text-xs font-medium text-red-600">
        Overdue
      </p>
    <% end %>
  </div>

  <%# Status badge %>
  <div class="flex-shrink-0">
    <% case entry.status %>
    <% when :taken %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        Taken
      </span>
    <% when :skipped %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        Skipped
      </span>
    <% when :pending %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
        </svg>
        Pending
      </span>
    <% end %>
  </div>
</div>
