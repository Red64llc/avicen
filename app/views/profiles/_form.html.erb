<%= turbo_frame_tag "profile_form" do %>
  <% if @profile.errors.any? %>
    <div id="error_explanation" class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg mt-5">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul class="list-disc ml-5 mt-2">
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @profile, url: profile_path, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name,
          required: true,
          autofocus: true,
          placeholder: "Your full name",
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @profile.errors[:name].any? %>
        <p class="text-red-500 text-sm mt-1"><%= @profile.errors[:name].first %></p>
      <% end %>
    </div>

    <div class="my-5">
      <%= form.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :date_of_birth,
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <p class="text-gray-500 text-sm mt-1">Optional. Used for personalized health recommendations.</p>
    </div>

    <div class="my-5">
      <%= form.label :timezone, class: "block text-sm font-medium text-gray-700" %>
      <%= form.time_zone_select :timezone,
          ActiveSupport::TimeZone.all,
          { include_blank: "Select your timezone" },
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <p class="text-gray-500 text-sm mt-1">Used for accurate date and time displays.</p>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4 my-5">
      <div class="inline">
        <%= form.submit class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>
    </div>
  <% end %>
<% end %>
