<% url = medication_schedule.persisted? ? medication_schedule_path(medication_schedule) : medication_medication_schedules_path(medication) %>
<%= form_with(model: medication_schedule, url: url, class: "space-y-4") do |form| %>
  <% if medication_schedule.errors.any? %>
    <div class="bg-red-50 text-red-600 rounded-lg p-3">
      <h3 class="font-medium">Please fix the following errors:</h3>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% medication_schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :time_of_day, "Time of Day", class: "block text-sm font-medium text-gray-700" %>
    <%= form.time_field :time_of_day,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <fieldset>
    <legend class="block text-sm font-medium text-gray-700 mb-2">Days of Week</legend>
    <div class="flex flex-wrap gap-3">
      <% MedicationSchedule::DAY_NAMES.each_with_index do |day_name, index| %>
        <label class="inline-flex items-center space-x-1.5 cursor-pointer">
          <input type="checkbox"
                 name="medication_schedule[days_of_week][]"
                 value="<%= index %>"
                 <%= "checked" if medication_schedule.days_of_week&.include?(index) %>
                 class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
          <span class="text-sm text-gray-700"><%= day_name %></span>
        </label>
      <% end %>
    </div>
  </fieldset>

  <div>
    <%= form.label :dosage_amount, "Dosage Amount (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :dosage_amount, placeholder: "e.g., 50mg (overrides medication default)",
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :instructions, "Instructions (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :instructions, rows: 2, placeholder: "e.g., Take with food",
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-2">
    <%= link_to "Cancel", medication.prescription,
        class: "text-sm text-gray-500 hover:text-gray-700" %>
    <%= form.submit medication_schedule.persisted? ? "Update Schedule" : "Add Schedule",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
