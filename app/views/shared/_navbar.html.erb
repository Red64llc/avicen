<nav role="navigation" class="bg-white shadow-sm border-b border-gray-200 print:hidden" data-controller="nav-toggle">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and primary navigation -->
      <div class="flex">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "text-xl font-bold text-blue-600 hover:text-blue-700" do %>
            Avicen
          <% end %>
        </div>

        <% if authenticated? %>
          <!-- Desktop navigation links -->
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <%= link_to "Dashboard", dashboard_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
            <%= link_to "Schedule", schedule_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
            <%= link_to "Weekly", weekly_schedule_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
            <%= link_to "Prescriptions", prescriptions_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
            <%= link_to "Adherence", adherence_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
            <%= link_to "Settings", edit_profile_path,
                class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
          </div>
        <% end %>
      </div>

      <!-- Right side: user info and actions -->
      <div class="hidden sm:ml-6 sm:flex sm:items-center sm:space-x-4">
        <% if authenticated? %>
          <!-- User name/email display -->
          <span class="text-sm text-gray-700">
            <% if Current.user&.profile&.name.present? %>
              <%= Current.user.profile.name %>
            <% else %>
              <%= Current.user&.email_address %>
            <% end %>
          </span>

          <!-- Logout button -->
          <%= button_to "Log out", session_path, method: :delete,
              class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <% else %>
          <!-- Login/Register links for unauthenticated users -->
          <%= link_to "Sign In", new_session_path,
              class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
          <%= link_to "Get Started", new_registration_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button type="button"
                class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                aria-controls="mobile-menu"
                aria-expanded="false"
                data-action="click->nav-toggle#toggle"
                data-nav-toggle-target="button">
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg class="h-6 w-6" data-nav-toggle-target="openIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Close icon (hidden by default) -->
          <svg class="hidden h-6 w-6" data-nav-toggle-target="closeIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu (hidden by default) -->
  <div class="hidden sm:hidden" id="mobile-menu" data-nav-toggle-target="menu">
    <% if authenticated? %>
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "Dashboard", dashboard_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Daily Schedule", schedule_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Weekly Overview", weekly_schedule_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Prescriptions", prescriptions_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Adherence", adherence_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Settings", edit_profile_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
      </div>
      <div class="pt-4 pb-3 border-t border-gray-200">
        <div class="flex items-center px-4">
          <div class="text-base font-medium text-gray-800">
            <% if Current.user&.profile&.name.present? %>
              <%= Current.user.profile.name %>
            <% else %>
              <%= Current.user&.email_address %>
            <% end %>
          </div>
        </div>
        <div class="mt-3 space-y-1">
          <%= button_to "Log out", session_path, method: :delete,
              class: "block w-full text-left pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        </div>
      </div>
    <% else %>
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "Sign In", new_session_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300" %>
        <%= link_to "Get Started", new_registration_path,
            class: "block pl-3 pr-4 py-2 border-l-4 border-blue-500 text-base font-medium text-blue-700 bg-blue-50" %>
      </div>
    <% end %>
  </div>
</nav>
