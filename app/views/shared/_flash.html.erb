<% if notice.present? %>
  <div class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-lg print:hidden" data-flash-target="message">
    <%= notice %>
  </div>
<% end %>
<% if alert.present? %>
  <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg print:hidden" data-flash-target="message">
    <%= alert %>
  </div>
<% end %>
