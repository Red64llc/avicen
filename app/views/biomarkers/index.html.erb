<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Biomarker Trends</h1>
    <%= link_to "Back to Reports", biology_reports_path, class: "btn btn-secondary" %>
  </div>

  <% if @biomarkers.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @biomarkers.each do |biomarker| %>
        <div class="biomarker-card bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6">
          <%= link_to biomarker_trends_path(biomarker), class: "block" do %>
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-1">
                  <%= biomarker.name %>
                </h3>
                <p class="text-sm text-gray-600">
                  <%= biomarker.code %>
                </p>
              </div>
              <div class="flex-shrink-0 ml-4">
                <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 text-blue-600 font-bold text-lg">
                  <%= biomarker.test_results_count %>
                </span>
              </div>
            </div>
            
            <div class="flex items-center justify-between text-sm text-gray-500">
              <span>
                <% if biomarker.test_results_count == 1 %>
                  1 test result
                <% else %>
                  <%= biomarker.test_results_count %> test results
                <% end %>
              </span>
              <span class="text-blue-600 font-medium flex items-center">
                View trend
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <div class="text-gray-400 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-gray-700 mb-2">No Biomarkers Yet</h2>
      <p class="text-gray-600 mb-6">
        You haven't recorded any test results yet. Create a biology report and add test results to see biomarker trends here.
      </p>
      <%= link_to "Create Your First Report", new_biology_report_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
