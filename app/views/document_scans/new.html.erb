<%= turbo_frame_tag "document_scan_flow" do %>
  <div class="document-scan-container">
    <h1 class="text-2xl font-semibold mb-6">Scan Document</h1>

    <p class="mb-6 text-gray-600">
      Capture or upload an image of your medical document. We'll use AI to extract the information automatically.
    </p>

    <%= form_with url: upload_document_scans_path, method: :post, scope: :scan, local: false, data: { controller: "camera", turbo_frame: "document_scan_flow" } do |form| %>
      <div class="space-y-6">
        <!-- Camera/Upload Section -->
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center" data-camera-target="dropzone">
          <div data-camera-target="preview" class="hidden mb-4">
            <!-- Preview image is dynamically inserted by camera controller -->
          </div>

          <div data-camera-target="uploadArea">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>

            <div class="space-y-4">
              <!-- Camera capture button for mobile (Requirement 1.2) -->
              <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
                <%# Camera capture with capture="environment" opens rear camera on mobile %>
                <label class="btn btn--primary cursor-pointer inline-flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>Take Photo</span>
                  <%= form.file_field :image,
                      accept: "image/jpeg,image/png,image/heic,image/heif",
                      capture: "environment",
                      class: "sr-only",
                      id: "camera_capture_input",
                      data: {
                        camera_target: "input",
                        action: "change->camera#handleFileSelect"
                      } %>
                </label>

                <span class="text-gray-400 hidden sm:inline">or</span>

                <%# File upload option without capture for desktop/gallery access %>
                <label class="btn btn--secondary cursor-pointer inline-flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>Choose File</span>
                  <%= form.file_field :image,
                      accept: "image/jpeg,image/png,image/heic,image/heif,application/pdf",
                      class: "sr-only",
                      id: "file_upload_input",
                      data: {
                        camera_target: "input",
                        action: "change->camera#handleFileSelect"
                      } %>
                </label>
              </div>

              <p class="text-sm text-gray-500">or drag and drop</p>
              <p class="text-xs text-gray-400">JPEG, PNG, HEIC, or PDF (max 10MB)</p>
            </div>

            <div class="mt-6 pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">
                Don't have a document to scan?
                <%= link_to "Enter data manually", new_biology_report_path, class: "text-blue-600 hover:text-blue-800 underline" %>
              </p>
            </div>
          </div>

          <!-- Progress indicator (Requirement 1.6) -->
          <div data-camera-target="progress" class="hidden mt-4">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-primary h-2 rounded-full transition-all duration-300" style="width: 0%" data-camera-target="progressBar"></div>
            </div>
            <p class="text-sm text-gray-500 mt-2">Uploading...</p>
          </div>

          <!-- Error message display (Requirement 1.7) -->
          <div data-camera-target="error" class="hidden mt-4 text-red-600 text-sm"></div>

          <!-- Retry button (Requirement 1.7) -->
          <button type="button"
                  data-camera-target="retryButton"
                  data-action="click->camera#retry"
                  class="hidden mt-4 px-4 py-2 text-sm text-blue-600 hover:text-blue-800 underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Try again
          </button>
        </div>

        <!-- Submit button -->
        <div class="flex justify-end">
          <%= form.submit "Continue",
              class: "btn btn--primary",
              disabled: true,
              data: { camera_target: "submitButton" } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
