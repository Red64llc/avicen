<%# Partial for displaying extraction status, broadcasted via Turbo Streams %>
<%# Locals: record, status, record_type %>

<div id="<%= record_type.underscore %>_<%= record.id %>_extraction_status"
     class="extraction-status extraction-status--<%= status %>">
  <% case status.to_sym %>
  <% when :pending %>
    <div class="flex items-center gap-2 text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>Pending extraction</span>
    </div>

  <% when :processing %>
    <div class="flex items-center gap-2 text-blue-600">
      <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span>Extracting document data...</span>
    </div>

  <% when :extracted %>
    <div class="flex items-center gap-2 text-green-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span>Extraction complete</span>
      <% review_path = record_type == "Prescription" ? review_document_scan_path(record_type: record_type.underscore, record_id: record.id) : review_document_scan_path(record_type: record_type.underscore, record_id: record.id) rescue nil %>
      <% if review_path %>
        <%= link_to "Review extracted data", review_path, class: "text-blue-600 hover:underline ml-2" %>
      <% end %>
    </div>

  <% when :confirmed %>
    <div class="flex items-center gap-2 text-green-700">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>Data confirmed and saved</span>
    </div>

  <% when :failed %>
    <div class="flex items-center gap-2 text-red-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>Extraction failed</span>
      <button type="button"
              class="text-blue-600 hover:underline ml-2"
              data-controller="extraction-retry"
              data-extraction-retry-record-type-value="<%= record_type %>"
              data-extraction-retry-record-id-value="<%= record.id %>">
        Retry
      </button>
    </div>

  <% else %>
    <div class="text-gray-500">
      <span><%= status.to_s.humanize %></span>
    </div>
  <% end %>
</div>
