<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Create an account</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg mt-5">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented your account from being created:</h2>
      <ul class="list-disc ml-5 mt-2">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: registration_path, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter your email address", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:email_address].any? %>
        <p class="text-red-500 text-sm mt-1"><%= @user.errors[:email_address].first %></p>
      <% end %>
    </div>

    <div class="my-5">
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Minimum 8 characters", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:password].any? %>
        <p class="text-red-500 text-sm mt-1"><%= @user.errors[:password].first %></p>
      <% end %>
    </div>

    <div class="my-5">
      <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:password_confirmation].any? %>
        <p class="text-red-500 text-sm mt-1"><%= @user.errors[:password_confirmation].first %></p>
      <% end %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit "Create account", class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        Already have an account?
        <%= link_to "Sign in", new_session_path, class: "text-gray-700 underline hover:no-underline" %>
      </div>
    </div>
  <% end %>
</div>
